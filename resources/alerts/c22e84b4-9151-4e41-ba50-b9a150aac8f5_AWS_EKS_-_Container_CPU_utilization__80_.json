        "metricFilter": {
          "promql": "avg(amazonaws_com_ContainerInsights_container_cpu_utilization_avg) by (ClusterName, cloud_region, cloud_account_id)"
        },
        "rules": [
          {
            "condition": {
              "threshold": 80,
              "forOverPct": 100,
